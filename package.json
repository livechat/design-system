{
  "name": "design-system",
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap",
    "build:cdn": "lerna run --scope @livechat/design-system build:cdn",
    "deploy": "gh-pages -d styleguide",
    "predeploy": "npm run-script styleguide:build",
