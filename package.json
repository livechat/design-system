{
  "private": "true",
  "name": "@livechat/ds-workspace",
  "version": "1.0.0",
  "description": "LiveChat Design System",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "clean": "lerna exec rimraf dist",
    "prestart": "npm run clean",
    "start": "lerna run dev --parallel",
    "start:example": "lerna run start --scope example-react --stream",
    "prebuild": "npm run clean",
    "build": "lerna run build --ignore example-*",
    "build:icons": "lerna run build:ts --scope @livechat/design-system-icons",
    "chromatic": "lerna run chromatic --stream",
    "prepare": "husky install",
    "lint": "lerna run lint --stream",
    "test": "lerna run test --ignore example-react --stream",
    "test:watch": "lerna run test:watch --parallel",
    "prettier": "prettier --write packages",
    "check": "run-s lint test",
    "predeploy": "npm run check && npm run prettier && npm run build",
    "deploy": "lerna version && lerna publish from-package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/livechat/design-system.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/livechat/design-system/issues"
  },
  "homepage": "https://github.com/livechat/design-system#readme",
  "devDependencies": {
    "@storybook/addon-links": "^7.0.21",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "lerna": "^7.1.4",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "2.4.0",
    "rimraf": "^3.0.2",
    "stylelint": "^14.10.0",
    "stylelint-config-concentric-order": "^5.0.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard": "^27.0.0",
    "typescript": "^4.4.2"
  },
  "volta": {
    "node": "16.13.2"
  },
  "dependencies": {
    "clsx": "^1.1.1"
  }
}
